import type { JobOffer } from '../lib/types';

const jobOffers:JobOffer[] = await fetch('http://127.0.0.1:5000/api/jobs').then((res) => res.json());

export const title = "Job Offers";
---

<div class="container">
  <h1>Job Offers</h1>
  <div class="job-list">
    {jobOffers.map((job, index) => (
      <div class="job-card">
        <h2>{job.title}</h2>
        <p class="location"><span class="icon">üìç</span> {job.location}</p>
        <p class="description">{job.description}</p>
        <button class="apply-btn" onclick={`window.location.href='/jobs/${job.id}/info'`}>Apply Now</button>
      </div>
    ))}
  </div>
</div>